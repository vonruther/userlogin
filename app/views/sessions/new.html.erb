<!DOCTYPE html>
<html>
<head>
  <title>FistBook</title>

  <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="css/style.css">

  <style = type="text/css">
    .login-form {
      width: 400px;
      margin: auto;
      background: rgb(255,255,255);
      margin-top: 50px;
      box-shadow: 0px 1px 1px 1px rgba(0, 0, 0, 0.3);
      padding: 20px;
    }
  </style> 
</head>
<body style="background-color:rgba(236, 240, 241, 1);">
  <!-- main -->
  <%= form_tag sessions_path do |form| %>
  <main class="container">
    <div class="row">
      <div class="col-md-6" style="margin-top: 150px">
        <h1 class="text-center">Welcome to FistBook! <br><small>A simple Facebook clone.</small></h1>
        <h4 class="text-center">Login to start enjoying unlimited fun!</h4>
      </div>
      <div class="col-md-6">  
        <br /><br />
        <!-- login form -->
        <div class="login-form">
          <div class="form-group">
            <%= text_field_tag :email,  "", class: "form-control form-control-lg", placeholder: "Email" %>
            <!-- <input class="form-control" type="text" name="username" placeholder="Username"> -->
          </div>

          <div class="form-group">
            <%= password_field_tag :password,  "", class: "form-control form-control-lg", placeholder: "Password" %>
            <!-- <input class="form-control" type="password" name="password" placeholder="Password"> -->
          </div>

          <div class="form-group">
            <input class="btn btn-primary btn-block btn-lg" type="submit" name="login" value="Login">
          </div>

          <div class="clearfix">
            <label class="pull-left checkbox-inline"><input type="checkbox"> Remember me</label>
            <a href="#" class="pull-right">Forgot Password?</a>
          </div>

          <hr>

          <div class="form-group">
            <input class="btn btn-success btn-block btn-lg" onclick="location.href='/users/new';" value="Create New Account">
          </div>
        </div>
        <!-- ./login form -->
      </div>
    </div>
  </main>
  <% end %> 
  <!-- ./main -->

  <!-- ./footer -->
  <script type="text/javascript" src="js/bootstrap.min.js"></script>
  <script type="text/javascript" src="js/script.js"></script>
</body>
</html>


